// Wine2Digital PM - MVP Schema
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String? // Optional for OAuth users (Google SSO)
  firstName     String?
  lastName      String?
  name          String? // Full name for OAuth users
  emailVerified DateTime? // Verified email date
  image         String? // Profile image from OAuth
  role          String    @default("member") // member, manager, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  createdProjects  Project[]          @relation("ProjectCreator")
  projectMembers   ProjectMember[]
  assignedTasks    TaskAssignee[]
  assignedSubtasks Subtask[]
  taskComments     TaskComment[]
  subtaskComments  SubtaskComment[]
  absences         Absence[]
  messages         Message[]
  uploadedFiles    FileUpload[]       @relation("FileUploader")
  notifications    Notification[]
  taskActivities   TaskActivity[]
  wikiPagesCreated WikiPage[]         @relation("WikiPageCreator")
  wikiPagesUpdated WikiPage[]         @relation("WikiPageUpdater")
  wikiRevisions    WikiPageRevision[]
  auditLogs        AuditLog[]

  isActive   Boolean   @default(true)
  disabledAt DateTime?

  // Organization
  department   String?
  office       String?
  reportsToId  String?
  reportsTo    User?   @relation("UserHierarchy", fields: [reportsToId], references: [id], onDelete: SetNull)
  subordinates User[]  @relation("UserHierarchy")

  // NextAuth
  accounts    Account[]
  sessions    Session[]
  timeEntries TimeEntry[]
  clockifyEntries ClockifyEntry[]
}

// Work Rules & Global Settings
model WorkSettings {
  id                String   @id @default(cuid())
  standardStartTime String   @default("09:00")
  standardEndTime   String   @default("18:00")
  breakDurationMin  Int      @default(60)
  lateToleranceMin  Int      @default(15)
  updatedAt         DateTime @updatedAt
}

// Time Tracking
model TimeEntry {
  id              String    @id @default(cuid())
  userId          String
  date            DateTime // Only the date part is significant
  clockIn         DateTime?
  clockOut        DateTime?
  breakDuration   Int       @default(0) // in minutes
  totalMinutes    Int       @default(0) // net worked minutes
  overtimeMinutes Int       @default(0)
  isLate          Boolean   @default(false)
  isEarlyExit     Boolean   @default(false)
  status          String    @default("present") // present, absent, holiday, weekend, leave

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

// Clockify-style daily reporting (separate from PM Projects/Tasks)
model ClockifyProject {
  id       String @id @default(cuid())
  name     String
  client   String @default("")
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries ClockifyEntry[]

  @@unique([name, client])
  @@index([isActive])
}

model ClockifyEntry {
  id          String   @id @default(cuid())
  userId      String
  projectId   String
  workDate    DateTime // Only the date part is significant (daily report)
  description String
  task        String?
  tags        String[] @default([])
  billable    Boolean  @default(false)
  startAt     DateTime
  endAt       DateTime
  durationMin Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  project ClockifyProject @relation(fields: [projectId], references: [id], onDelete: Restrict)

  @@index([userId, workDate])
  @@index([projectId, workDate])
  @@index([startAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String?
  actionType String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  actor User? @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([entityType, entityId])
}

// Project model
model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("active") // active, completed, archived
  creatorId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  creator   User            @relation("ProjectCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members   ProjectMember[]
  tasks     Task[]
  messages  Message[]
  files     FileUpload[]
  invites   ProjectInvite[]
  wikiPages WikiPage[]
  taskLists TaskList[]
  tags      ProjectTag[]
}

model TaskList {
  id        String   @id @default(cuid())
  projectId String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   Task[]

  @@unique([projectId, name])
  @@index([projectId, updatedAt])
}

model ProjectTag {
  id        String   @id @default(cuid())
  projectId String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   Task[]  @relation("TaskTags")

  @@unique([projectId, name])
  @@index([projectId])
}

model WikiPage {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  slug        String
  content     String   @db.Text
  isArchived  Boolean  @default(false)
  createdById String
  updatedById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project   Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy User               @relation("WikiPageCreator", fields: [createdById], references: [id], onDelete: Restrict)
  updatedBy User?              @relation("WikiPageUpdater", fields: [updatedById], references: [id], onDelete: SetNull)
  revisions WikiPageRevision[]

  @@unique([projectId, slug])
  @@index([projectId, updatedAt])
}

model WikiPageRevision {
  id              String   @id @default(cuid())
  pageId          String
  contentSnapshot String   @db.Text
  createdById     String
  createdAt       DateTime @default(now())

  page      WikiPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  createdBy User     @relation(fields: [createdById], references: [id], onDelete: Restrict)

  @@index([pageId, createdAt])
}

// Project Members (junction table)
model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  role      String   @default("member") // owner, member
  joinedAt  DateTime @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

// Task model for Kanban board
model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("todo") // todo, in_progress, done
  priority    String    @default("medium") // low, medium, high
  dueDate     DateTime?
  position    Int       @default(0)
  projectId   String
  listId      String?
  storyPoints Int? // Story points for agile estimation
  amountCents Int? // Importo in centesimi (EUR)
  legacyTags  String?   @map("tags") // Legacy: JSON string array of tags
  list        String? // Category/list name (e.g., "MEDIA PARTNERS")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project      Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskList     TaskList?        @relation(fields: [listId], references: [id], onDelete: SetNull)
  tags         ProjectTag[]     @relation("TaskTags")
  assignees    TaskAssignee[]
  subtasks     Subtask[]
  comments     TaskComment[]
  dependencies TaskDependency[] @relation("TaskDependencies")
  dependentOn  TaskDependency[] @relation("DependentTasks")
  attachments  TaskAttachment[]
  activities   TaskActivity[]
}

model TaskActivity {
  id        String   @id @default(cuid())
  taskId    String
  actorId   String?
  type      String
  metadata  Json?
  createdAt DateTime @default(now())

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  actor User? @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@index([taskId, createdAt])
}

// Task Assignees (junction table)
model TaskAssignee {
  id         String   @id @default(cuid())
  taskId     String
  userId     String
  assignedAt DateTime @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
}

// Subtasks - Tasks within tasks (Mini Tasks)
model Subtask {
  id          String    @id @default(cuid())
  taskId      String
  title       String
  description String?
  completed   Boolean   @default(false) // Deprecated in favor of status
  status      String    @default("todo") // todo, in_progress, done
  priority    String    @default("medium") // low, medium, high
  dueDate     DateTime?
  position    Int       @default(0)
  assigneeId  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  task        Task                @relation(fields: [taskId], references: [id], onDelete: Cascade)
  assignee    User?               @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  comments    SubtaskComment[]
  attachments SubtaskAttachment[]
  checklists  SubtaskChecklist[]

  // Dependencies
  dependencies SubtaskDependency[] @relation("SubtaskDependencies")
  dependentOn  SubtaskDependency[] @relation("DependentSubtasks")

  @@index([taskId, position])
}

// Subtask Dependencies
model SubtaskDependency {
  id          String   @id @default(cuid())
  subtaskId   String
  dependsOnId String
  createdAt   DateTime @default(now())

  subtask   Subtask @relation("SubtaskDependencies", fields: [subtaskId], references: [id], onDelete: Cascade)
  dependsOn Subtask @relation("DependentSubtasks", fields: [dependsOnId], references: [id], onDelete: Cascade)

  @@unique([subtaskId, dependsOnId])
  @@index([dependsOnId])
}

model SubtaskChecklist {
  id        String   @id @default(cuid())
  subtaskId String
  title     String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subtask Subtask                @relation(fields: [subtaskId], references: [id], onDelete: Cascade)
  items   SubtaskChecklistItem[]

  @@index([subtaskId, position])
}

model SubtaskChecklistItem {
  id          String   @id @default(cuid())
  checklistId String
  content     String   @db.Text
  completed   Boolean  @default(false)
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  checklist SubtaskChecklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)

  @@index([checklistId, position])
}

model SubtaskComment {
  id        String   @id @default(cuid())
  subtaskId String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subtask Subtask @relation(fields: [subtaskId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([subtaskId, createdAt])
}

model SubtaskAttachment {
  id         String   @id @default(cuid())
  subtaskId  String
  fileName   String
  fileSize   Int
  mimeType   String
  filePath   String
  uploadedBy String
  createdAt  DateTime @default(now())

  subtask Subtask @relation(fields: [subtaskId], references: [id], onDelete: Cascade)

  @@index([subtaskId, createdAt])
}

// Task Comments
model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Task Dependencies - Tasks that depend on other tasks
model TaskDependency {
  id          String   @id @default(cuid())
  taskId      String // The task that has the dependency
  dependsOnId String // The task it depends on
  createdAt   DateTime @default(now())

  // Relations
  task      Task @relation("TaskDependencies", fields: [taskId], references: [id], onDelete: Cascade)
  dependsOn Task @relation("DependentTasks", fields: [dependsOnId], references: [id], onDelete: Cascade)

  @@unique([taskId, dependsOnId])
}

// Task Attachments
model TaskAttachment {
  id         String   @id @default(cuid())
  taskId     String
  fileName   String
  fileSize   Int
  mimeType   String
  filePath   String // Path to file storage
  uploadedBy String
  createdAt  DateTime @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Calendar - Absence requests and permissions
model Absence {
  id         String    @id @default(cuid())
  userId     String
  type       String // vacation, sick_leave, personal, late_entry, early_exit, overtime, transfer, remote, ooo
  startDate  DateTime
  endDate    DateTime
  startTime  String? // For partial days (e.g., "09:00")
  endTime    String? // For partial days (e.g., "13:00")
  isFullDay  Boolean   @default(true)
  reason     String?
  status     String    @default("pending") // pending, approved, rejected
  approvedBy String?
  approvedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Chat - Project messages
model Message {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Files - Uploaded documents
model FileUpload {
  id         String   @id @default(cuid())
  projectId  String
  uploadedBy String
  fileName   String
  fileSize   Int
  mimeType   String
  filePath   String // Path to file storage
  createdAt  DateTime @default(now())

  // Relations
  project  Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploader User    @relation("FileUploader", fields: [uploadedBy], references: [id], onDelete: Cascade)
}

// Notifications
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String // task_assigned, task_completed, absence_approved, message_received, etc.
  title     String
  message   String   @db.Text
  link      String? // Link to related resource
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Project Invites - Sharing via link
model ProjectInvite {
  id        String    @id @default(cuid())
  projectId String
  token     String    @unique
  role      String    @default("member") // member, manager
  expiresAt DateTime?
  maxUses   Int? // Null = unlimited uses
  usedCount Int       @default(0)
  createdBy String
  createdAt DateTime  @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
